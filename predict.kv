#:kivy 1.10.1
<PaintWidget>

<CustButton@Button>:
    font_size: 14
    size: 160, 20


<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileBrowser:
            id: filechooser
            path: "C:/Users/A800005316"
            on_success: root.load(filechooser.path, filechooser.selection)
            on_canceled: root.cancel()


<Main>
    prediction_display: prediction
    orientation: "vertical"
    padding: 10
    spacing: 5
    canvas.before:
        Color:
            rgb: 0.8, 0.8, 0.8
        Rectangle:
            # self here refers to the widget
            pos: self.pos
            size: self.size

    GridLayout:
        cols: 1
        size_hint: 0.3, 0.5
        spacing: 5
        pos_hint: {'center_x': 0.5, 'y': 1}
        #orientation: 'vertical'
        Button:
            text: 'Load'
            on_release: root.show_load()

        CustButton:
            on_release: root.export(self)
            text: 'Export'

        CustButton:
            on_release: root.predict(self)
            text: 'Predict'

        CustButton:
            on_release: root.save_png(self)
            text: 'Save'

    GridLayout:
        cols: 1
        size_hint: 1, 0.5
        pos_hint: {'center_x': .5, 'center_y': .5}
        Label:
            size_hint: 1, 0.5
            font_size: 28
            text: 'The digit on the image is:'
        Label:
            canvas.before:
                Color:
                    rgb: 0.1, 0.8, 0.8
                Rectangle:
                    # self here refers to the widget
                    pos: self.pos
                    size: self.size
            font_size: 68
            id: prediction
            text: ''
            valign: 'top'


